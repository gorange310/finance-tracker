<div class="results-block">
  <%= render "layouts/messages" %>
</div>

<% if @friends %>
<div class="card card-header results-block">
<table class="col-md-12">
  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><strong>Name: </strong> <%= friend.full_name %></td>  
        <td><strong>E-mail: </strong> <%= friend.email %></td>
        <td><strong>Profile: </strong> <%= link_to "View", user_path(friend.id),
                                          class:"btn btn-sm btn-outline-success" %>
            <% if current_user.not_freind_with?(friend.id) %>
            <%= link_to "Follow?", friendships_path(user: current_user, friend: friend),
                method: :post, class:"btn btn-sm btn-outline-success" %>
            <% else %>
              <span class="badge badge-secondary text-warning">
                already followed
              </span>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
  
</div>
<% end %>