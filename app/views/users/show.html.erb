<h1>Users Details</h1>

<div class="card card-header results-block">
<table class="col-md-12">
  <tbody>
    <tr>
      <td><strong>Name: </strong> <%= @user.full_name %></td>  
      <td><strong>E-mail: </strong> <%= @user.email %></td>
      <td>
          <% if current_user.not_freind_with?(@user.id) %>
          <%= link_to "Follow?", friendships_path(friend: @user),
              method: :post, class:"btn btn-sm btn-outline-success" %>
          <% else %>
            <span class="badge badge-secondary text-warning">
              already followed
            </span>
          <% end %>
      </td>
    </tr>
  </tbody>
</table>
</div>


<% if !@tracked_stocks.empty? %>
  <%= render "stocks/list" %>
<% else %>
  <p class='lead text-primary'>This user is not tracking any stocks</p>
<% end %>
<%= link_to 'Back', my_friends_path, class: "btn btn-primary" %>